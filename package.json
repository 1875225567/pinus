{
	"name": "pinus",
	"version": "0.0.1",
	"devDependencies": {
		"lerna": "^2.5.1",
		"lerna-relinker": "^1.4.0",
		"nyc": "^11.2.1",
		"pinus-site-tools": "^1.0.6",
		"ts-node": "^3.2.0",
		"tslint": "^4.1.1",
		"typedoc": "^0.9.0",
		"typescript": "^2.6.2"
	},
	"scripts": {
		"postinstall": "lerna bootstrap",
		"test": "mocha",
		"cov": "sh scripts/cov.sh",
		"ci": "npm run build && npm run cov",
		"purge": "npm run clean && rm -rf node_modules",
		"reset": "npm run purge && npm i && npm run ci",
		"canary": "lerna publish --canary",
		"beta": "lerna publish --npm-tag beta --force-publish=*",
		"next": "lerna publish --npm-tag next",
		"publish": "lerna publish",
		"force-publish": "lerna publish --force-publish=*",
		"bootstrap": "lerna bootstrap",
		"clean": "lerna clean --yes; rm -rf ./packages/**/package-lock.json",
		"updated": "lerna updated",
		"li": "lerna init",
		"build": "lerna run build",
		"gen-api-ref": "lerna run gen-api-ref",
		"gen-site": "pst build && npm run gen-api-ref",
		"authors": "git log --format='%aN <%aE>' | sort -u > AUTHORS"
	},
	"keywords": [
		"netease",
		"pomelo",
		"server",
		"framework",
		"game server",
		"pinus",
		"runtime",
		"cluster",
		"service",
		"application"
	],
	"homepage": "https://github.com/node-pinus/pinus",
	"repository": {
		"type": "git",
		"url": "https://github.com/node-pinus/pinus.git"
	},
	"engines": {
		"node": ">= 6.0.0"
	},
	"license": "MIT"
}
